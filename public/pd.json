{
  "id": "vp-presentation-definition",
  "input_descriptors": [
    {
      "id": "identity_input",
      "name": "Age and Country Check",
      "purpose": "Verify that the user is over 18 and from an allowed country",
      "constraints": {
        "fields": [
          {
            "path": ["$.credentialSubject.age"],
            "filter": {
              "type": "number",
              "minimum": 18
            }
          },
          {
            "path": ["$.credentialSubject.country"],
            "filter": {
              "type": "string",
              "pattern": "^(VN|US|DE|FR)$"
            }
          }
        ]
      },
      "format": {
        "jwt_vc": {
          "alg": ["ES256", "ES256K"]
        }
      }
    }
  ],
  "format": {
    "jwt_vc": {
      "alg": ["ES256", "ES256K"]
    }
  }
}
