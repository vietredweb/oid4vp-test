{
  "presentation_definition": {
    "id": "vp-request-123",
    "input_descriptors": [
      {
        "id": "age-country-check",
        "name": "Age and Country Verification",
        "purpose": "Verify age >= 18 and residency in EU",
        "constraints": {
          "fields": [
            {
              "path": ["$.credentialSubject.birthDate"],
              "filter": {
                "type": "string",
                "format": "date",
                "minimum": "2006-01-01"
              }
            },
            {
              "path": ["$.credentialSubject.address.country"],
              "filter": {
                "type": "string",
                "enum": ["FR", "DE", "DK", "NL", "BE"]
              }
            }
          ]
        }
      }
    ]
  },
  "client_id": "https://yourdomain.com",
  "nonce": "1234567890",
  "response_mode": "direct_post"
}
